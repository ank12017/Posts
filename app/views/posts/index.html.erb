<center>
<html>
<head>
<style>
table, th , td{
  border: 1px solid black;
}
</style>
</head>
<body>
<h2> Lists of posts </h2>

<table width="1000", height="300" >
  <tr>
    <h1><th>Title</th></h1>
    <h1><th>Text</th><h1>
    <th> Image</th>
    <th><colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= image_tag post.try(:avatar).try(:url) %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Post', new_post_path %>
</body>
</html>
 
 
</center>