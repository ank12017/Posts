
<center>
<div class ="row">
<div class= "col-md-3">
<div class="thumbnail">
<%= image_tag @post.avatar.url (:post_show) %>
<h2> Users: </h2>
<%= render @post.user %>
</div>
</div>
<div class= "col-md-6 col-md-offset-3">
<div class= "new-post-form">

<h1>Post</h1>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<h2><%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %></h2>
</div>
</div>
<div class = "col-md-6 col-md-offset-6 class =style">
<div class= "new-post-form">
 <h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
</div>
</div>
<div class = "col-md-4">
<h1><%= link_to "Add Review",new_post_review_path(@post) %></h1>
</div>
 


<p id="notice"><%= notice %></p>








</div>
</center>